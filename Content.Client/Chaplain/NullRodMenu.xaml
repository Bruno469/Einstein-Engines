<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      Title="{Loc 'null-rod-window-title'}"
                      MinSize="600 600">
  <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
    <!-- Informational panel -->
    <Label Text="{Loc 'null-rod-window-description'}" Margin="10 5"/>
    <controls:HLine Color="#606060" Thickness="1" Margin="0 10"/>
    <Label Name="SelectedSets" Text="{Loc 'null-rod-window-selected'}" Margin="10 5"/>

    <!-- Sets panel -->
    <ScrollContainer
        HScrollEnabled="False"
        VerticalExpand="True"
        Margin="10 5">
      <BoxContainer Name="SetsGrid" Orientation="Vertical" MinSize="460 200"/>
    </ScrollContainer>

    <!-- Approve button panel -->
    <Button Name="ApproveButton"
            Text="{Loc 'null-rod-window-approve-button'}"
            HorizontalAlignment="Right"
            Margin="10 10"
            StyleClasses="OpenRight"/>
  </BoxContainer>
</controls:FancyWindow>
