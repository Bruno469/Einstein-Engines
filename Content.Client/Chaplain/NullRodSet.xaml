<Control xmlns="https://spacestation14.io"
         xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
         xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">
  <!-- Set Name and Button -->
  <PanelContainer Margin="10 10 0 10">
    <PanelContainer.PanelOverride>
      <gfx:StyleBoxFlat BackgroundColor="#1a2a24" />
    </PanelContainer.PanelOverride>
    <BoxContainer Orientation="Vertical" HorizontalExpand="True">
      <GridContainer Margin="10" Columns="2" MinSize="600 0">
        <Label Name="SetName" Text="Set" StyleClasses="StatusFieldTitle" VerticalAlignment="Center"/>
        <Button Name="SetButton" Text="Select" StyleClasses="OpenRight"
                HorizontalAlignment="Right" VerticalAlignment="Center"/>
      </GridContainer>
      <controls:HLine Color="#606060" Thickness="1" Margin="0 10"/>

      <!-- Icon and Description -->
      <GridContainer Margin="10 10 0 10" Columns="2">
        <TextureRect Name="Icon" Stretch="KeepAspectCentered"
                     SetSize="64 64" HorizontalAlignment="Center"/>
        <Label Name="SetDescription" Text="Description" VerticalAlignment="Center" Margin="10 0"/>
      </GridContainer>
    </BoxContainer>
  </PanelContainer>
</Control>
